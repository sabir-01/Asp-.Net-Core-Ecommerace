@model List<Carts>

<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase" style="letter-spacing:4px">Cart Details</h2>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-striped text-center mt-3">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Customer Name</th>
                    <th>Product Quantity </th>
                    <th>Status</th>
                    <th>Option</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Carts in Model)
                {
                    <tr>
                        <td>@Carts.products.product_name</td>
                        <td>@Carts.customers.customer_name</td>
                        <td>@Carts.product_quantity</td>
                        <td>@Carts.cart_status</td>

                        <td>
                            <a href="@Url.Action("updateCarts","Admin",new {id=Carts.cart_id})" class="btn btn-warning">Update</a>
                            <a href="@Url.Action("deletePermissionCarts","Admin",new {id=Carts.cart_id})" class="btn btn-danger">Delete</a>
                        </td>

                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>