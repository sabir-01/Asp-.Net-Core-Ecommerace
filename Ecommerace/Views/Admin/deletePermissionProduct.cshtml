@model Product
<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase" style="letter-spacing:4px">Are You sure you to delete this Product ?</h2>
</div>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">

        <ul class="list-group my-3">
            <li class="list-group-item">Category Id : @Model.product_id</li>
            <li class="list-group-item">Category Name : @Model.product_name</li>

        </ul>
        <a href="@Url.Action("deleteproduct","Admin", new{id= Model.product_id })" class="btn btn-danger"> Delete Category</a>
        <a href="@Url.Action("fetchproduct","Admin")" class="btn btn-warning"> Back to List</a>

    </div>
    <div class="col-md-2"></div>
</div>