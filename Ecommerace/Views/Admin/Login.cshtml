@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Login Form</title>

    <style>

        * {
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            background-color: #f4f6f9;
        }

        /* Background */
        .login-container {
            background: linear-gradient(rgba(0,0,0,0.35), rgba(0,0,0,0.35)), url('/images/clothing-rack-bg.jpg') no-repeat center center/cover;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        /* Card Box */
        .login-box {
            background: #ffffff;
            padding: 55px 45px;
            width: 420px;
            border-radius: 12px;
            box-shadow: 0 20px 45px rgba(0,0,0,0.25);
            animation: fadeIn 0.6s ease;
        }

        /* Smooth Entry */
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Title */
        h1 {
            text-align: center;
            font-size: 1.4rem;
            letter-spacing: 3px;
            margin-bottom: 35px;
            color: #333;
        }

        /* Input Group */
        .input-group {
            margin-bottom: 22px;
        }

            .input-group label {
                display: block;
                font-size: 0.8rem;
                color: #777;
                margin-bottom: 6px;
                letter-spacing: .5px;
            }

            .input-group input {
                width: 100%;
                padding: 12px;
                border-radius: 6px;
                border: 1px solid #e2e2e2;
                background-color: #fafafa;
                transition: all 0.25s ease;
                outline: none;
            }

                .input-group input:focus {
                    border-color: #d4a373;
                    background: #fff;
                    box-shadow: 0 0 0 2px rgba(212,163,115,0.15);
                }

        /* Button */
        .login-btn {
            width: 100%;
            background: transparent;
            border: 2px solid #d4a373;
            color: #d4a373;
            padding: 11px;
            border-radius: 30px;
            cursor: pointer;
            font-size: 0.8rem;
            letter-spacing: 2px;
            transition: all 0.3s ease;
        }

            .login-btn:hover {
                background: #d4a373;
                color: #fff;
                box-shadow: 0 8px 20px rgba(212,163,115,0.4);
            }

        /* Footer */
        .footer-text {
            margin-top: 30px;
            border-top: 1px solid #eee;
            padding-top: 18px;
            text-align: center;
        }

            .footer-text p {
                color: #999;
                font-size: 0.85rem;
                margin: 0;
            }

            .footer-text a {
                text-decoration: none;
                color: #d4a373;
                font-weight: 600;
            }

                .footer-text a:hover {
                    text-decoration: underline;
                }

        /* Error Message */
        h4 {
            text-align: center;
            color: red;
            margin-top: 10px;
            font-size: 0.85rem;
        }

    </style>
</head>

<body>

    <div class="login-container">
        <div class="login-box">

            <h1>LOGIN FORM</h1>

            <!-- FORM (UNCHANGED) -->
            <form method="post">

                <div class="input-group">
                    <label>Username or email address *</label>
                    <input type="text" required name="adminEmail">
                </div>

                <div class="input-group">
                    <label>Password *</label>
                    <input type="password" required name="adminPassword">
                </div>

                <button type="submit" class="login-btn">
                    LOG IN →
                </button>

            </form>
            <div class="text-center">
                <h4 class="text-warning">
                    @ViewBag.message
                </h4>
            </div>


        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Script.js"></script>

</body>
</html>