@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Form</title>
<style>

        * {
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
        }
        

        .login-container {
            /* Replace URL with your actual image path */
            background: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('clothing-rack-bg.jpg') no-repeat center center/cover;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-box {
            background: white;
            padding: 60px 50px;
            width: 450px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.2);
            text-align: left;
        }

        h1 {
            text-align: center;
            font-size: 1.5rem;
            letter-spacing: 2px;
            margin-bottom: 40px;
            color: #333;
        }

        .input-group {
            margin-bottom: 25px;
        }

            .input-group label {
                display: block;
                font-size: 0.85rem;
                color: #888;
                margin-bottom: 8px;
            }

            .input-group input {
                width: 100%;
                padding: 12px;
                border: 1px solid #eee;
                background-color: #fafafa;
                outline: none;
            }

        .login-btn {
            background: transparent;
            border: 1px solid #d4a373;
            color: #d4a373;
            padding: 10px 25px;
            cursor: pointer;
            font-size: 0.8rem;
            letter-spacing: 1px;
            transition: 0.3s;
        }

            .login-btn:hover {
                background: #d4a373;
                color: white;
            }

        .footer-text {
            margin-top: 40px;
            border-top: 1px solid #eee;
            padding-top: 20px;
            text-align: center;
        }

            .footer-text p {
                font-weight: bold;
                color: #d4a373;
                font-size: 0.95rem;
            }

            .footer-text a {
                text-decoration: none;
                color: #d4a373;
            }
            h4{
                text-align :center;
                color:red;
                margin-top:2px;
            }
</style>
</head>
<body>
    <div class="login-container">
        <div class="login-box">
            <h1>LOGIN FORM</h1>
            <form method="post">
                <div class="input-group">
                    <label>Username or email address *</label>
                    <input type="text" required name="customer_username">
                </div>
                <div class="input-group">
                    <label>Password *</label>
                    <input type="password" required name="customer_password">
                </div>
                <button type="submit" class="login-btn">LOG IN &rarr;</button>
            </form>
            <div class="footer-text">
                <p>Don't Have an Account? <a href="@Url.Action("CustomerRegistration","customer")">Sign Up</a></p>
             
            </div>
        </div>          
    </div>
</body>
</html>