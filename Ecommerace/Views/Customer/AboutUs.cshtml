@{
    ViewData["Title"] = "About Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- HERO SECTION -->
<section class="about-hero text-white d-flex align-items-center">
    <div class="container text-center">
        <h1 class="display-4 fw-bold">About Our Company</h1>
        <p class="lead">We build smart solutions to make your life easier.</p>
    </div>
</section>

<!-- ABOUT CONTENT -->
<section class="py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <img src="~" class="img-fluid rounded shadow" alt="About Image" />
            </div>
            <div class="col-md-6">
                <h2 class="fw-bold">Who We Are</h2>
                <p class="text-muted">
                    We are a passionate team of developers dedicated to creating powerful,
                    scalable, and user-friendly applications. Our goal is to deliver high-quality
                    digital experiences that help businesses grow and succeed.
                </p>
                <p class="text-muted">
                    With expertise in ASP.NET, databases, and modern UI design,
                    we turn ideas into real-world solutions.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- MISSION / VISION -->
<section class="bg-light py-5">
    <div class="container text-center">
        <h2 class="fw-bold mb-4">Our Mission & Vision</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm p-4">
                    <h4 class="fw-bold">🚀 Mission</h4>
                    <p class="text-muted">
                        To deliver reliable software solutions that simplify business processes.
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm p-4">
                    <h4 class="fw-bold">💡 Vision</h4>
                    <p class="text-muted">
                        To become a leading technology partner trusted worldwide.
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm p-4">
                    <h4 class="fw-bold">⭐ Values</h4>
                    <p class="text-muted">
                        Innovation, Integrity, Quality, and Customer Satisfaction.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- WHY CHOOSE US -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center fw-bold mb-5">Why Choose Us</h2>
        <div class="row text-center">
            <div class="col-md-3">
                <div class="feature-box">
                    <h3>⚡ Fast</h3>
                    <p class="text-muted">High performance and optimized solutions.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-box">
                    <h3>🔒 Secure</h3>
                    <p class="text-muted">Security-first development approach.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-box">
                    <h3>🎯 Reliable</h3>
                    <p class="text-muted">Trusted by clients for stable systems.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-box">
                    <h3>💬 Support</h3>
                    <p class="text-muted">We are always here to help you.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CALL TO ACTION -->
<section class="cta-section text-white text-center">
    <div class="container">
        <h2 class="fw-bold">Let’s Build Something Great Together</h2>
        <p>Contact us today to start your project.</p>
        <a href="@Url.Action("feedback","customer")" class="btn btn-light px-4 py-2 fw-bold">
            Contact Us
        </a>
    </div>
</section>

<!-- CUSTOM STYLES -->
<style>
    .about-hero {
        height: 60vh;
        background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('/images/banner.jpg') center/cover no-repeat;
    }

    .feature-box {
        padding: 20px;
        transition: 0.3s;
        border-radius: 10px;
    }

        .feature-box:hover {
            background: #f8f9fa;
            transform: translateY(-8px);
        }

    .cta-section {
        background: #0d6efd;
        padding: 60px 20px;
    }
</style>