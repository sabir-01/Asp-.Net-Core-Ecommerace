
@{
    ViewData["Title"] = "fetchAllProducts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mt-4">
    <h2 class="text-center fw-bold">All Products</h2>

    <div class="row g-4 mt-2">
        @Html.Partial("fetchProducts", ViewData["product"])
    </div>

    @if (TempData["message"] != null)
    {
        <h4 class="text-success text-center mt-3">@TempData["message"]</h4>
    }
</div>
